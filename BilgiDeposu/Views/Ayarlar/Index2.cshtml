@using BilgiDeposu.Models.Entitiy
@model List<ADMIN>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" href="/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Yetki</th>
        <th>Sil</th>
        <th>Düzenle</th>

    </tr>
    @foreach (var item in Model)
    {  
<tr>
    <th>@item.ID</th>
    <th>@item.Kullanici</th>
    <th>@item.Yetki</th>
    <td>
        <a class="btn btn-info btn-sm" href="/Ayarlar/AdminGuncelle/@item.ID">
            <i class="fas fa-pencil-alt">
            </i>
            Düzenle
        </a>
    </td>
    <td>
        <a class="btn btn-danger btn-sm" href="/Ayarlar/AdminSil/@item.ID">
            <i class="fas fa-trash">
            </i>
            Sil
        </a>
    </td>
    
</tr>
    }
    </table>
<br />
<button class="btn btn-primary" data-toggle="modal"
        data-target="#Modal1">Yeni Admin Ekle </button>>
<div class="modal" id="Modal1">
    <div class="modal-dialog" >
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Admin Ekleme Paneli</h2>

            </div>
            <form method="post" action="/Ayarlar/YeniAdmin/">
                <div class="modal-body">
                    <label>Kullanıcı Adı</label>
                    <input type="text" name="Kullanici" class="form-control" />
                    <label>Şifre</label>
                    <input type="text" name="Sifre" class="form-control" />
                    <label>Yetki</label>
                    <input type="text" name="Yetki" class="form-control" />
                    <br/>
                    <button class="btn btn-info">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

