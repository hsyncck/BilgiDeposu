@model BilgiDeposu.Models.Entitiy.TBLAKADEMISYEN
@{
    ViewBag.Title = "AkademisyenGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("AkademisyenGuncelle", "Akademisyen", FormMethod.Post))
{
    <div style=" margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Akademisyen ID</label>
            @Html.TextBoxFor(y => y.ID, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Akademisyen Adı</label>
            @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Akademisyen Soyadı</label>
            @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Akademisyen Detay Bilgileri</label>
            @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control" })
        </div>
        <button class="btn btn-warning">Akademisyen Bilgilerini Güncelle</button>
    </div>
}


